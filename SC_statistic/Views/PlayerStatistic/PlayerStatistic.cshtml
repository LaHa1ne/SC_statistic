@model SC_statistic.DataLayer.DTO.StatisticDTO.TrackedPlayerListDTO
<div class="main-statistic-container">
    <div class="row player-statistic-and-sessions">
        <div class="col-5 player-statistic-col">

            <div class="d-flex justify-content-start align-items-start mt-4">
                <div class="choose-player-container">
                    <div class="choose-player-header">Игрок</div>
                    <select class="player-select" onchange="Add_player_statistic('select')">
                        <option name="empty_option" value="">Не выбран</option>
