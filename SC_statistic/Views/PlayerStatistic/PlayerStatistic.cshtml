                        {
                            foreach (var TrackedPlayer in Model.TrackedPlayerList)
                            {
                                <option name="@TrackedPlayer.TrackedPlayerId" value="@TrackedPlayer.Nickname">@TrackedPlayer.Nickname</option>
                            }
                        }
                    </select>
                </div>
